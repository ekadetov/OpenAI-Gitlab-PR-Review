{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Gunicorn",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--bind",
                "0.0.0.0:80"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "test_webhook",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "test_integration.py",
                "-k",
                "test_webhook"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug Test Under Cursor",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${relativeFile}",
                "-k",
                "${selectedText}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}